{
	"name": "@neovici/cosmoz-rating",
	"version": "1.0.0",
	"description": "A simple rating web component",
	"keywords": [
		"web-components",
		"rating",
		"stars",
		"pion",
		"lit-html"
	],
	"homepage": "https://github.com/neovici/cosmoz-rating#readme",
	"bugs": {
		"url": "https://github.com/neovici/cosmoz-rating/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/neovici/cosmoz-rating.git"
	},
	"license": "Apache-2.0",
	"author": "",
	"main": "dist/index.js",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"lint": "tsc && eslint --cache .",
		"build": "tsc -p tsconfig.build.json",
		"start": "wds",
		"test": "wtr --coverage",
		"test:watch": "wtr --watch",
		"dev": "npm run storybook:start",
		"storybook:start": "storybook dev -p 8000",
		"storybook:build": "storybook build",
		"storybook:deploy": "storybook-to-ghpages",
		"storybook:preview": "npm run storybook:build && http-server -d ./storybook-static/",
		"prepare": "husky"
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/github",
			"@semantic-release/npm",
			"@semantic-release/git"
		],
		"branch": "master",
		"preset": "conventionalcommits"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist/",
		"types"
	],
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"body-max-line-length": [
				1,
				"always",
				600
			]
		}
	},
	"exports": {
		".": "./dist/index.js"
	},
	"dependencies": {
		"@pionjs/pion": "^2.5.2",
		"lit-html": "^3.3.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@neovici/cfg": "^1.51.0",
		"@open-wc/testing": "^4.0.0",
		"@semantic-release/changelog": "^6.0.0",
		"@semantic-release/git": "^10.0.0",
		"@storybook/addon-essentials": "^7.0.0",
		"@storybook/addon-links": "^7.0.0",
		"@storybook/web-components": "7.6.17",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22.10.2",
		"@web/storybook-builder": "^0.1.9",
		"@web/storybook-framework-web-components": "^0.1.1",
		"esbuild": "^0.24.0",
		"http-server": "^14.1.1",
		"husky": "^9.0.11",
		"rollup-plugin-esbuild": "^6.1.1",
		"semantic-release": "^24.0.0",
		"sinon": "^19.0.0",
		"storybook": "^7.0.0",
		"typescript": "^5.4.3",
		"@eslint/eslintrc": "^2.0.0"
	},
	"overrides": {
		"conventional-changelog-conventionalcommits": ">= 8.0.0"
	}
}
